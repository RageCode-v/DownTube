<ADM>:
    Prince:
        name: 'one'

<Prince>:
    BoxLayout:
        orientation: 'vertical'
        padding: root.width*0.1, root.height*0.05
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '30dp'
            TextInput:
                id: direct
                hint_text: 'URL'
            Button:
                size_hint_x: None
                width: '30dp'
                text: 'Get'
                on_release: root.start(direct.text)
        BoxLayout:
            orientation: 'horizontal'
            padding: '10sp', 0
            size_hint_y: None
            height: root.height*0.3
            Image:
                source: './data/image.png'
                allow_stretch: True
                keep_ratio: False
                size: 1280, 720
                id: tumb
            Latitle:
                id: vitle
                font_name: './data/TakaoPMincho.ttf'
                text: 'Video title'
        TabbedPanel:
            id: tab
            do_default_tab: False
            tab_pos: 'top_mid'
            TabbedPanelItem:
                text: 'VÃ­deo'
                ScrollView:
                    BoxLayout:
                        orientation: 'vertical'
                        Button:
                            text: '720p/30fps'
                            on_release: root.select({'itag': 22, 'ext': '.mp4'})
                        Button:
                            text: '360p/30fps'
                            on_release: root.select({'itag': 18, 'ext': '.mp4'})
                        Button:
                            text: '144p/7fps'
                            on_release: root.select({'itag': 17, 'ext': '.mp4'})
            TabbedPanelItem:
                text: 'Audio'
                ScrollView:
                    BoxLayout:
                        orientation: 'vertical'
                        Button:
                            text: 'mp3/128kbps'
                            on_release: root.select({'itag': 140, 'ext': '.mp3'})
        Button:
            text: 'Baixar'
            on_release: root.down_this()
