<Prince>:
    BoxLayout:
        orientation: 'vertical'
        padding: root.width*0.1, root.height*0.05
        spacing: '10sp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '30dp'
            TextInput:
                id: direct
                hint_text: 'URL'
            Button:
                size_hint_x: None
                width: '30dp'
                text: 'Get'
                on_release: root.start(direct.text)
        BoxLayout:
            orientation: 'horizontal'
            Image:
                source: './data/image.png'
                nochace: True
                id: tumb
            Latitle:
                id: vitle
                font_name: './data/TakaoPMincho.ttf'
                text: 'Video title'
        TabbedPanel:
            id: tab
            do_default_tab: False
            tab_pos: 'top_mid'
            TabbedPanelItem:
                text: 'VÃ­deo'
                ScrollView:
                    BoxLayout:
                        orientation: 'vertical'
                        minimum_height: '40sp'
                        ToggleButton:
                            group: 'downs'
                            text: '720p/30fps'
                            on_press: root.select({'itag': 22, 'ext': '.mp4'})
                        ToggleButton:
                            group: 'downs'
                            text: '360p/30fps'
                            on_press: root.select({'itag': 18, 'ext': '.mp4'})
                        ToggleButton:
                            group: 'downs'
                            text: '144p/7fps'
                            on_press: root.select({'itag': 17, 'ext': '.mp4'})
            TabbedPanelItem:
                text: 'Audio'
                ScrollView:
                    BoxLayout:
                        orientation: 'vertical'
                        minimum_height: '40sp'
                        ToggleButton:
                            group: 'downs'
                            text: 'mp3/128kbps'
                            on_press: root.select({'itag': 140, 'ext': '.mp3'})
        Button:
            pos_hint: {'center_x': 0.5}
            size_hint: None, None
            size: root.width*0.4, '30dp'
            text: 'Baixar'
            on_release: root.down_this()
