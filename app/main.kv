<TabVid>:
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            Check:
                group: 'downs'
                on_press: app.root.select(0)
                text: '720p/30fps'
            Check:
                group: 'downs'
                on_press: app.root.select(1)
                text: '360p/30fps'
            Check:
                group: 'downs'
                on_press: app.root.select(2)
                text: '144p/7fps'

<TabAud>:
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            Check:
                group: 'downs'
                on_press: app.root.select(3)
                text: 'mp3/128kbps'

<Prince>:
    BoxLayout:
        orientation: 'vertical'
        padding: root.width*.05, root.height*.1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '30dp'
            MDTextField:
                id: direct
                hint_text: 'URL'
            MDIconButton:
                size_hint_x: None
                width: '30dp'
                icon: 'card-search'
                on_release: root.get(direct.text)
        BoxLayout:
            orientation: 'horizontal'
            spacing: 25
            AsyncImage:
                source: './data/image.png'
                nochace: True
                id: tumb
            MDLabel:
                id: vitle
                markup: True
                font_context: 'system://.'
                text: 'Video title'
                on_ref_press: root.new_title()

        MDTabs:
            pos_hint: {'center_x': .5}
            tab_hint_x: True
            allow_stretch: True
            TabVid:
                icon: 'file-video'
                title: 'Vídeo'
            TabAud:
                icon: 'file-music'
                title: 'Áudio'
        MDRectangleFlatIconButton:
            icon: 'arrow-collapse-down'
            text: 'Baixar'
            pos_hint: {'center_x': .5}
            on_release: root.down()
